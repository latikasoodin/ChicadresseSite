@using Chicadresse.Entities.Domain;
@model GuestViewModel

<div class="modal-dialog" style="left:0%">
    <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            <div class="ttl_box new_ttl">
                <h3><i class="vndr i_hotel_restaurant_166"></i>Delete Ajouter invité(e)</h3>
            </div>
        </div>
        <!-- Modal Body -->
        <div class="modal-body">
            @using (Ajax.BeginForm("Delete", "Invites", new AjaxOptions
            {
                HttpMethod = "DELETE",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "guest-table",
                OnSuccess = "Invites.CloseModal"
            }, new { id = "frmDeleteGuest" }))
            {
                <input type="hidden" name="id" value="@Model.Id" />
                <p>
                    Are you sure you want to delete guest <b>@Model.Name</b>  ?
                </p>
                <div class="npd pull-right">
                    <button type="submit" class="btn btn-default modelbtn">Delete</button>
                </div>
                <div class="clearfix"></div>
            }
        </div>
    </div>
</div>
