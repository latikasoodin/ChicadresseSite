@using Chicadresse.Entities.Domain;
@model IEnumerable<Guest_List_Result>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_WeddingLayout.cshtml";
    InviteStats stats = ViewBag.InviteStats;
}
<div class="container">
    <div class="row">
        <section class="left_right_dash">
            <div class="col-sm-9 no_left_pdg invitfour">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                        <h4><i class="orglestble2"></i>  Filtrer par</h4>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        <a data-ajax="true" data-ajax-success="Invites.OpenModal" data-ajax-method="Get" data-ajax-mode="replace" data-ajax-update="#chicadresse-modal"
                           href="/Invites/Add">
                            <h4>
                                <i class="orglestble1"></i>  Ajouter invité(e)
                            </h4>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        <h4><i class="orglestble"></i>   Organiser les tables</h4>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                        <a href="/Invites/Download" class="pdf_btn">Telecharger PDF</a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div>
                    <table id="mytable" class="table table-bordred table-striped">
                        <thead>
                            <tr>
                                <th class="col-sm-4">Nom</th>
                                <th class="col-sm-2">Présence</th>
                                <th class="col-sm-3">Table</th>
                                <th class="col-sm-3">Groupe</th>
                                <th class="col-sm-1">option</th>
                            </tr>
                        </thead>
                        <tbody id="guest-table">
                            @if (Model != null && Model.Any())
                            {
                                <text>@Html.Partial("_GuestList", Model)</text>
                            }
                            else
                            {
                                <text>
                                    <tr>
                                        <td class="text-center" colspan="5">
                                            No Guest is invited.
                                        </td>
                                    </tr>
                                </text>
                            }

                        </tbody>
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="col-sm-3 padding-right">
                <section class="box_detail" style="background-color:#91d0d8;padding:15px;margin:0 0 15px;">
                    <ul>
                        <li>
                            <div class="icon">
                                <span class="tble i_dinner_table_one"></span>
                            </div>
                            <div class="txt_sed">
                                <p>@stats.Total invites</p>
                                <span>Ajouter invité(e)</span>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    </ul>
                    <ul class="threelist">
                        <li>
                            <div class="txt_sedd">
                                <span>Confirmé</span>
                                <p>@stats.Confirms</p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                        <li>
                            <div class="txt_sedd">
                                <span>En attente</span>
                                <p>@stats.Waiting</p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                        <li>
                            <div class="txt_sedd">
                                <span>Tables</span>
                                <p>@stats.Tables</p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </section>
                <section class="ads_right_box">
                    <a href="javascript:void(0);">
                        <img src="images/jeff.jpg" class="img-responsive">
                    </a>
                </section>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </section>
    </div>
</div>
<script src="~/app/pages/guests-list.js"></script>